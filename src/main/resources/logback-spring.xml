<!--                        <exclude>org\.apache\.coyote\..*</exclude>-->
<!--                        <exclude>org\.apache\.tomcat\..*</exclude>-->
<!--                    </throwableConverter>-->
<!--                </stackTrace>-->
<!--            </providers>-->
        </encoder>
    </appender>

    <root level="INFO">
        <appender-ref ref="stdout_json"/>
    </root>

    <logger name="no.nav.dolly.web.logging.LogRequestInterceptor">
        <level value="TRACE"/>
    </logger>
    <logger name="no.nav.dolly.web.service.LogService">
        <level value="TRACE"/>
    </logger>

</configuration>