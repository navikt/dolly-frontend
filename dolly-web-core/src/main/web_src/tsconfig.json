{
	"compilerOptions": {
		"allowJs": true,
		"sourceMap": true,
		"moduleResolution": "node",
		"esModuleInterop": true,
		"module": "es6",
		"target": "ESNext",
		"outDir": "./dist",
		"lib": ["esnext", "dom"],
		"jsx": "react",
		"baseUrl": ".",
		"paths": {
			"~/*": ["./src/*"]
		}
	},
	"exclude": ["node_modules", "**/node_modules/*"]
}
